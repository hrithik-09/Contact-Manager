<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_primary"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/rootLayout"
            android:orientation="vertical">

            <!-- User Image -->
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/circular_background">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/contactImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user"
                    app:shapeAppearanceOverlay="@style/CircularImageView"/>


                <ImageView
                    android:id="@+id/addImageIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/circular_background"
                    android:padding="4dp"
                    android:src="@drawable/ic_add" />
            </FrameLayout>

            <!-- First Name -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/text_input_outline_color"
                app:boxStrokeErrorColor="@color/error"
                app:hintTextColor="@color/textPrimary"
                android:layout_marginTop="5dp"
                android:id="@+id/firstNameInputLayout"
                android:layout_height="wrap_content"
                android:hint="First Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Surname -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/text_input_outline_color"
                app:boxStrokeErrorColor="@color/error"
                android:layout_marginTop="5dp"
                app:hintTextColor="@color/textPrimary"
                android:hint="Surname">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Prefix -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/text_input_outline_color"
                app:boxStrokeErrorColor="@color/error"
                app:hintTextColor="@color/textPrimary"
                android:layout_marginTop="5dp"
                android:hint="Prefix">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/prefix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Mobile Number -->
            <LinearLayout
                android:id="@+id/mobileNumberContainer"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/text_input_outline_color"
                        app:boxStrokeErrorColor="@color/error"
                        app:hintTextColor="@color/textPrimary"
                        android:id="@+id/mobileNumberInputLayout"
                        android:layout_weight="1.5"
                        android:hint="Mobile Number">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/mobileNumber"
                            android:inputType="phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/mobileType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:entries="@array/phone_types"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/text_input_outline_color"
                app:boxStrokeErrorColor="@color/error"
                android:id="@+id/emailInputLayout"
                app:hintTextColor="@color/textPrimary"
                android:hint="Email ID">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Birthday -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/text_input_outline_color"
                app:boxStrokeErrorColor="@color/error"
                app:hintTextColor="@color/textPrimary"
                    android:hint="DOB">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/birthday"
                    android:layout_marginTop="5dp"
                    android:focusable="false"
                    app:boxStrokeColor="@color/text_input_outline_color"
                    app:boxStrokeErrorColor="@color/error"
                    app:hintTextColor="@color/textPrimary"
                    android:clickable="false"
                    android:inputType="date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Address -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                app:boxStrokeColor="@color/text_input_outline_color"
                app:boxStrokeErrorColor="@color/error"
                app:hintTextColor="@color/textPrimary"
                android:layout_marginTop="5dp"
                android:hint="Address">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:id="@+id/buttonContainer"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/cancelButton"
            android:textAlignment="center"
            android:background="?attr/selectableItemBackground"
            android:text="Cancel"/>
        <TextView
            android:layout_width="0dp"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/textPrimary"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="16sp"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/saveButton"
            android:text="Save"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
